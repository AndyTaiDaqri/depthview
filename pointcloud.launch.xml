<?xml version="1.0" encoding="UTF-8" ?>
<launch>
  <arg name="camera" default="camera" />
  <group ns="$(arg camera)" >
  <!-- <group > -->
    <arg name="manager" default="manager0" />
    <node pkg="nodelet" type="nodelet" name="$(arg manager)" args="manager"/>
    <group ns="ir" >
        <node pkg="nodelet" type="nodelet" name="rectify_ir"
            args="load image_proc/rectify /$(arg camera)/$(arg manager)" >
            <remap from="image_mono" to="image_raw" />
        </node>
    </group>
    <group ns="depth" >
        <node pkg="nodelet" type="nodelet" name="rectify_depth"
            args="load image_proc/rectify /$(arg camera)/$(arg manager)" >
            <remap from="image_mono" to="image_raw" />
        </node>
        <node pkg="nodelet" type="nodelet" name="depth_to_pointcloud"
            args="load depth_image_proc/point_cloud_xyz /$(arg camera)/$(arg manager)" >
        </node>
    </group>
  </group>
  <node pkg="tf" type="static_transform_publisher" name="map_tf"
    args="0 0 0 0 0 0 /world /map 100" >
  </node>
  <node pkg="tf" type="static_transform_publisher" name="depth_tf"
    args="0 0 0 -1.570796327 0 -1.570796327 /map /depth 100" > -->
  </node>
    <!-- <node pkg="tf" type="static_transform_publisher" name="depth_tf"
        args="0 0 0 0.707106781 0 0 -0.707106781 /map /depth 100" /> -->
</launch>
